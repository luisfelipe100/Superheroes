<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <a href="<%= pages_superman_url %>">
        <img src="http://vignette1.wikia.nocookie.net/lego/images/6/69/Superman_CGI.png/revision/latest?cb=20120125211722" alt="" class="img-responsive center-block">
      </a>
    </div>
    <div class="col-xs-6">
      <a href="<%= pages_batman_url %>">
        <img src="http://vignette1.wikia.nocookie.net/lego/images/d/d1/Batman.png/revision/20141219224908" alt="" class="img-responsive center-block bat">
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <form action="<%= pages_save_voto_superman_path %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
          <input type="text" name="nombre" value="" placeholder="Nombre" class="form-control">
        </div>
        <div class="form-group">
          <input type="email" name="email" value="" placeholder="E-mail" class="form-control">
        </div>
        <input type="submit" name="" value="Votar por Superman" class="btn btn-default">
      </form>
    </div>
    <div class="col-xs-6">
      <form action="<%= pages_save_voto_batman_path %>" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <div class="form-group">
          <input type="text" name="nombre" value="" placeholder="Nombre" class="form-control">
        </div>
        <div class="form-group">
          <input type="email" name="email" value="" placeholder="E-mail" class="form-control">
        </div>
        <input type="submit" name="" value="Votar por Batman" class="btn btn-default">
      </form>
    </div>
  </div>
  <div class="row">
    <h2 class="notice text-center"><%= flash[:notice] %></h2>
  </div>
</div>


<script type="text/javascript">
  $.backstretch("http://wallpapercave.com/wp/t6WT84L.jpg");
</script>
